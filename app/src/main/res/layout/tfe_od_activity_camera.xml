<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/tfe_semi_transparent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="430dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/info_button"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/info_btn" />

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/sharing_btn"/>

        <ImageButton
            android:id="@+id/setting_button"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/setting_btn"/>
    </LinearLayout>

    <!-- 공유하기 버튼을 누르면 새롭게 교체되는 탭  -->
    <LinearLayout
        android:id="@+id/share_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="430dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/person1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/baseline_person_24"
            />
        <TextView
            android:id="@+id/person1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="4dp"/>

        <ImageButton
            android:id="@+id/person2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/baseline_person_24"/>
        <TextView
            android:id="@+id/person2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="4dp"/>

        <ImageButton
            android:id="@+id/person3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/baseline_person_24"/>
        <TextView
            android:id="@+id/person3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <include
        android:visibility="gone"
        android:id="@+id/bottom_sheet_layout"
        layout="@layout/tfe_od_layout_bottom_sheet" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="center"
        tools:context="org.tensorflow.demo.CameraActivity" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>